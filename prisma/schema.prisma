generator client {
  provider = "prisma-client-js"
  previewFeatures = ["filterJson"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  UserID        String  @id @default(cuid()) @map("user_id")
  email         String? @unique
  password      String
  passwordSalt  String

  @@map("user")
}

model Organisation {
  UserID        String  @id @map("user_id")
  OrgName       String  @map("organisation_id")
  NGONum        String? @unique @map("ngo_number")
  Description   String?  @map("description")
  AddressLink    String?  @map("address_link")

  @@map("organisation")
}

model Rating {
  OrgID     String  @map("organisation_id")
  ClientID  String  @map("client_id")
  rating    Int     @map("rating")
  Comment   String  @map("comment")

  @@id([OrgID,ClientID])
  @@map("rating")
}

model Item {
  ItemID      String  @id @default(cuid()) @map("item_id")
  ItemName    String  @map("item_name")
  Descrition  String  @map("descrition")

  @@map("item")
}

model HasItem {
  ItemID      String  @map("item_id")
  OrgID       String  @map("org_id")
  Quantity    Int     @map("quantity")

  @@id([ItemID,OrgID])
  @@map("has_item")
}